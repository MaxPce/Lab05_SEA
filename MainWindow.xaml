<Window x:Class="PC1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            
            <Button Content="Listar Clientes" Click="ButtonListarClientes_Click" Margin="5"/>
            <Button Content="Registrar Cliente" Click="ButtonRegistrarCliente_Click" Margin="5"/>
            <Button Content="Actualizar Cliente" Click="ButtonActualizarCliente_Click" Margin="5"/>
            <Button Content="Eliminar Cliente" Click="ButtonEliminarCliente_Click" Margin="5"/>
            <DataGrid x:Name="dgClientes" AutoGenerateColumns="True" Margin="5" RenderTransformOrigin="0.5,3.354"/>
        </StackPanel>
    </Grid>
</Window>
